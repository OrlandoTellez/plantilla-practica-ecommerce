---
import Layout from '../layouts/Layout.astro';
import Hero from '../sections/Hero.astro';
import Footer from '../sections/Footer.astro';
import ProductosDestacados from '../sections/ProductosDestacados.astro';
import Categorias from '../sections/Categorias.astro';
import Productos from '../sections/Productos.astro';
import HeroShop from '../sections/HeroAbout.astro';
---

<Layout title="Shop">
	<main>
		<Categorias />
		<Productos />
	</main>
</Layout>

<style>
	main{
		width: 100%;
		display: flex;
		flex-direction: column;
		justify-content: center;
		max-width: 1024px;
	}
	
	@media only screen and (min-width: 1024px){
        main{
            width: 100%;
			flex-direction: row;
			padding: 100px 0;
        }
    }
</style>
